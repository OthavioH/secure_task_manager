{
  "name": "backend",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "npm run build && npm run typeorm:migrate && npm run start",
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/server.ts",
    "dev:mysql": "docker-compose -f ./docker-compose.db.mysql.yml up -d",
    "dev:postgres": "docker-compose -f ./docker-compose.db.postgres.yml up -d",
    "build": "tsc",
    "typeorm": "npx typeorm-ts-node-commonjs --dataSource src/config/db_data_source.ts",
    "typeorm:migrate": "npm run typeorm migration:run",
    "typeorm:generate": "npm run typeorm migration:generate src/migrations/migration --timestamp",
    "typeorm:revert": "npm run typeorm migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.4",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
